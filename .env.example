# Jane's Jeans - Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=janesjeans

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# IMPORTANT: Generate a secure 256-bit key for production!
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-here-make-it-long-and-secure-at-least-32-chars

# ===========================================
# EMAIL CONFIGURATION (for order confirmations)
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
VITE_API_URL=http://localhost:8080
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_PUBLISHABLE_KEY=your-supabase-anon-key

# ===========================================
# PGADMIN (Optional - Development Tools)
# ===========================================
PGADMIN_EMAIL=admin@janesjeans.com
PGADMIN_PASSWORD=admin123

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
SPRING_PROFILES_ACTIVE=dev
