<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-shipments-table" author="janesjeans">
        <createTable tableName="shipments">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="vendor_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="tracking_number" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="pending">
                <constraints nullable="false"/>
            </column>
            <column name="shipping_address" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="shipped_at" type="TIMESTAMP"/>
            <column name="estimated_delivery" type="TIMESTAMP"/>
            <column name="delivered_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint 
            baseTableName="shipments" 
            baseColumnNames="order_id"
            constraintName="fk_shipments_order"
            referencedTableName="orders"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
        
        <addForeignKeyConstraint 
            baseTableName="shipments" 
            baseColumnNames="vendor_id"
            constraintName="fk_shipments_vendor"
            referencedTableName="shipping_vendors"
            referencedColumnNames="id"
            onDelete="RESTRICT"/>
        
        <createIndex tableName="shipments" indexName="idx_shipments_order_id">
            <column name="order_id"/>
        </createIndex>
        
        <createIndex tableName="shipments" indexName="idx_shipments_vendor_id">
            <column name="vendor_id"/>
        </createIndex>
        
        <createIndex tableName="shipments" indexName="idx_shipments_tracking_number">
            <column name="tracking_number"/>
        </createIndex>
        
        <createIndex tableName="shipments" indexName="idx_shipments_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
